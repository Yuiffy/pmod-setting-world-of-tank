		"texts": {
			// armagomen
			"damageDealt": "<font color='#E0E0E0' size='16'>({{piercedHits}}) <font color='#E0E06D'>{{damageDealt}}</font></font> <img src='img://gui/maps/icons/library/dossier/avgDamage40x32.png' width='30' height='23' vspace='-7'>",
			"mainGunProcess": "<img src='img://gui/maps/icons/achievement/32x32/mainGun.png' width='23' height='23' vspace='-7'> <font color='#E0E0E0' size='16'>伤害手: <font color='#E0E06D'>{{mainGun}}</font></font>",
			"mainGunFailed": "<img src='img://gui/maps/icons/achievement/32x32/mainGun.png' width='23' height='23' vspace='-7'> <font color='#FFB0B0'>无法达成</font>",
