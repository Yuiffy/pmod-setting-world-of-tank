{
    "safeShot": {
		"disableKey": "KEY_LALT", // Клавиша для отключения мода
		
		/* Переключатель блокировки выстрела по уничтоженным танкам */
        "deadShot": {
            "blockShot": true,  // Включение, выключение элемента (true - включен, false - выключен)
            "blockTimeout": 5.0 // Время блокировки огня по цели после ее уничтожения
        },
		
		/* Переключатель блокировки выстрела по союзникам */
        "teamShot": {
            "blockShot": true,            // Включение, выключение элемента (true - включен, false - выключен)
			"blockBlueShot": false,       // Блокировать стрельбу по "голубцам" союзникам
			"blockSquadShot": false,      // Блокировать стрельбу по совзводным
			"sendChatMessage": true,      // Отправлять сообщение в чат при блокировке выстрела
			"chatMessageInterval": 5.0,   // Интервал отправки одинаковых сообщений
			"considerGunDirection": true, // Учитывать направление орудия (если не подсвечен контур)
            "chatMessage": "{name}{clan} ({vehicle}), 别挡我开炮!" // Текст сообщения. Разрешены макросы {name} - имя игрока, {clan} - клан игрока и {vehicle} - танк игрока
        },
		
		/* Переключатель блокировки бесполезного выстрела */
        "wasteShot": {
            "blockShot": false,  // Включение, выключение элемента (true - включен, false - выключен)
			"aimMode": ["arcade", "sniper", "strategic"] // arcade - аркажный режим, sniper - снайперский режим, strategic - арт режим 
        },
		
		/* Сообщение над прицелом при блокировке выстрела */
		"shotBlock": {
            "blockMessage": true, // Включение, выключение элемента (true - включен, false - выключен)
			"reason": {
			    "teamShot":  "目标是队友",  // Огонь по союзникам
			    "deadShot":  "目标已击毁",  // Стрельба в труп
			    "wasteShot": "目标在射程外"  // Стрельба заведомо мимо цели
			},
			"shotBlockMessage": "[{reason}] 无法射击." // Текст сообщения. Разрешены макросы {reason} - тип заблокированного выстрела
        }
    }
}